#!/usr/bin/env bash
# Mock ollama for testing
# Records invocation args and echoes back the model used

model="$2"
prompt="$3"

echo "OLLAMA_MODEL=$model"
echo "OLLAMA_PROMPT=$prompt"

# Echo stdin (the transcript) prefixed so tests can verify it was received
while IFS= read -r line; do
  echo "TRANSCRIPT: $line"
done
